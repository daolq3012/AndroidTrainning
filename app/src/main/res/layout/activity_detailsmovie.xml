<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fstyle.androidtrainning.screen.detailsmovie.DetailsMovieActivity"
    style="@style/BackgroundTheme"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFC107"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_detail_movie"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorOrange"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            >
            <ImageView
                android:id="@+id/image_backdrop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax"
                />
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_detail_movie"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/Theme.AppCompat.Light"
                app:title="@string/namemovie"
                />
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            >

            <ImageView
                android:id="@+id/image_poster"
                android:layout_width="@dimen/dp_135"
                android:layout_height="@dimen/dp_200"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#766767"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:scaleType="fitXY"
                />

            <TextView
                android:id="@+id/text_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_toEndOf="@id/image_poster"
                android:layout_toRightOf="@id/image_poster"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:text="@string/timeMovie"
                android:textColor="@color/colorDescription"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/image_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_release_date"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toEndOf="@id/image_poster"
                android:layout_toRightOf="@id/image_poster"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:src="@drawable/ic_alarm"
                />

            <TextView
                android:id="@+id/text_run_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image_clock"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@id/image_clock"
                android:layout_toRightOf="@id/image_clock"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:text="@string/movielong"
                android:textColor="@color/colorDescription"
                android:textSize="@dimen/sp_18"
                />

            <ImageView
                android:id="@+id/image_kind_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_clock"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toEndOf="@id/image_poster"
                android:layout_toRightOf="@id/image_poster"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:src="@drawable/ic_assignment"
                />

            <TextView
                android:id="@+id/text_kind_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/image_kind_movie"
                android:layout_below="@id/text_run_time"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toEndOf="@id/image_kind_movie"
                android:layout_toRightOf="@id/image_kind_movie"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:paddingEnd="@dimen/dp_10"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/dp_10"
                android:paddingStart="0dp"
                android:text="@string/kindmovie"
                android:textColor="@color/colorDescription"
                android:textSize="@dimen/sp_18"
                />

            <TextView
                android:id="@+id/text_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_kind_movie"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toEndOf="@id/image_rate"
                android:layout_toRightOf="@id/image_rate"
                android:text="@string/ratemovie"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                />

            <ImageView
                android:id="@+id/image_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/text_rate"
                android:layout_below="@id/image_kind_movie"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_toEndOf="@id/image_poster"
                android:layout_toRightOf="@id/image_poster"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:src="@drawable/ic_star"
                />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/image_poster"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorView"
                />

            <TextView
                android:id="@+id/text_describe_movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view"
                android:padding="@dimen/dp_12"
                android:text="@string/describeMovie"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dp_16"
                />
        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floating_favorite"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:scaleType="center"
        android:src="@drawable/ic_action_favorite"
        app:elevation="@dimen/dp_6"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        app:pressedTranslationZ="@dimen/dp_12"
        />

</android.support.design.widget.CoordinatorLayout>
