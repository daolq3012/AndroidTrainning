<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fstyle.androidtrainning.screen.detailsmovie.DetailsMovieActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:contentDescription="@string/appbar_scrolling_view_behavior"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:id="@+id/posterImageView"
                android:layout_width="match_parent"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:layout_height="@dimen/dp_200"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax" />
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/appbar_scrolling_view_behavior">

            <ImageView
                android:id="@+id/movieImageView"
                android:layout_width="@dimen/dp_135"
                android:layout_height="@dimen/dp_200"
                android:layout_marginBottom="@dimen/dp_12"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:background="#766767"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/movieNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_toEndOf="@id/movieImageView"
                android:layout_toRightOf="@id/movieImageView"
                android:text="@string/namemovie"
                android:textSize="@dimen/sp_25"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeMovieTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieNameTextView"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/movieImageView"
                android:layout_toRightOf="@id/movieImageView"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:text="@string/timeMovie"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/clockImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/timeMovieTextView"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toEndOf="@id/movieImageView"
                android:layout_toRightOf="@id/movieImageView"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:src="@drawable/ic_alarm" />

            <TextView
                android:id="@+id/longMovieTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/timeMovieTextView"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_toEndOf="@id/clockImageView"
                android:layout_toRightOf="@id/clockImageView"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:text="@string/movielong"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/kindImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/clockImageView"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toEndOf="@id/movieImageView"
                android:layout_toRightOf="@id/movieImageView"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:src="@drawable/ic_assignment" />

            <TextView
                android:id="@+id/kindMovieTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/longMovieTextView"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toEndOf="@id/kindImageView"
                android:layout_toRightOf="@id/kindImageView"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:text="@string/kindmovie"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/rateImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kindImageView"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toEndOf="@id/movieImageView"
                android:layout_toRightOf="@id/movieImageView"
                android:contentDescription="@string/appbar_scrolling_view_behavior"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/rateMovieTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/kindMovieTextView"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toEndOf="@id/rateImageView"
                android:layout_toRightOf="@id/rateImageView"
                android:text="@string/ratemovie"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/describeMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/movieImageView"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_20"
                android:text="@string/describeMovie" />
        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_12"
        android:scaleType="center"
        android:src="@drawable/ic_action_favorite"
        app:elevation="@dimen/dp_6"
        app:layout_anchor="@id/app_bar_layout"
        app:layout_anchorGravity="bottom|right|end"
        app:pressedTranslationZ="@dimen/dp_12" />

</android.support.design.widget.CoordinatorLayout>
