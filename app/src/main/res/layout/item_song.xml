<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_dark_opacity"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingStart="@dimen/dp_20"
        >


        <ImageView
            android:id="@+id/image_song"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:contentDescription="@string/description"
            android:src="@drawable/ic_unknown_song"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="@dimen/weight_1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/text_name_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/song_name_demo"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/text_name_singer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/artist_name_demo"
                android:textColor="@color/color_white"
                />

        </LinearLayout>
        <com.like.LikeButton
            android:id="@+id/image_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:anim_scale_factor="2"
            app:icon_size="@dimen/dp_25"
            app:icon_type="heart"
            app:is_enabled="true"
            app:liked="false"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_little_silver"
        />
</LinearLayout>
