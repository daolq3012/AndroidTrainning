<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:background="@color/color_little_gray">

    <ImageView
        android:id="@+id/image_top_track"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginStart="@dimen/dp_25"
        android:contentDescription="@string/avatar"
        android:src="@drawable/img_demo_50x50" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@id/image_top_track"
        android:layout_toRightOf="@id/image_top_track"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/song_name_demo"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/text_name_singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name_singer"
            android:textColor="@color/color_white" />

    </LinearLayout>

</RelativeLayout>
