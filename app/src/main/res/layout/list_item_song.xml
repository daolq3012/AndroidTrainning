<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_dark_opacity"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_40"
        android:paddingRight="@dimen/dp_20"
        android:paddingStart="@dimen/dp_40">


        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:contentDescription="@string/description"
            android:src="@drawable/ic_unknown_song" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="@dimen/weight_1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">

            <TextView
                android:id="@+id/text_upper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/song_name_demo"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_lower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/artist_name_demo"
                android:textColor="@color/color_white" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_little_silver" />
</LinearLayout>
