<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_recent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:src="@drawable/ic_unknown_album"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_100"
        android:background="@color/color_dark_opacity"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_40"
        android:paddingRight="@dimen/dp_20"
        android:paddingStart="@dimen/dp_40"
        android:paddingTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/image_song"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:contentDescription="@string/description"
            android:src="@drawable/ic_unknown_song" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_weight="@dimen/weight_1">

            <TextView
                android:id="@+id/text_name_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/song_name_demo"
                android:textColor="@color/color_white"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_name_singer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/artist_name_demo"
                android:textColor="@color/color_white" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
