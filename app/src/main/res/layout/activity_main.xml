<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_little_gray"
    tools:context="com.fstyle.androidtrainning.screen.main.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/pcm_music"
        app:titleTextColor="@color/color_white" />

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBar"
        android:background="@color/color_transparent">

        <com.fstyle.androidtrainning.widget.UnSwipeViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_75" />

        <com.roughike.bottombar.BottomBar
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/dp_10"
            android:textAlignment="center"
            app:bb_tabXmlResource="@xml/bottombar_tabs" />

        <LinearLayout
            android:id="@+id/layout_mini_playing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_75"
            android:background="@color/color_dark_opacity"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_song"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:contentDescription="@string/description"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_unknown_song" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_name_song_mini"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_30"
                    android:text="@string/song_name_demo"
                    android:textColor="@color/color_yellow"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_name_artist_mini"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="@dimen/dp_20"
                    android:text="@string/artist_name_demo"
                    android:textColor="@color/color_yellow_custom"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:contentDescription="@string/description"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_skip_previous" />

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:contentDescription="@string/description"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_pause" />

            <ImageView
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:contentDescription="@string/description"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_skip_next" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_playing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wallpaper_main"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:contentDescription="@string/description"
                android:src="@drawable/ic_back" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_name_song"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/name_of_song"
                    android:textColor="@color/color_deep_purple"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/name_of_song"
                    android:textColor="@color/color_little_purple"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <ImageView
                android:id="@+id/image_alarm"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:contentDescription="@string/description"
                android:src="@drawable/ic_alarm" />
        </LinearLayout>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/idicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_playing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_350" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/text_start"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/default_time"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_24" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_1" />

            <TextView
                android:id="@+id/text_total"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/default_time"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_20">

            <ImageView
                android:id="@+id/image_shuffle"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="@dimen/weight_1"
                android:contentDescription="@string/description"
                android:src="@drawable/ic_shuffle" />

            <ImageView
                android:id="@+id/image_previous"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="@dimen/weight_1"
                android:contentDescription="@string/description"
                android:src="@drawable/ic_skip_previous" />

            <ImageView
                android:id="@+id/image_pause"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="@dimen/weight_1"
                android:contentDescription="@string/description"
                android:src="@drawable/ic_pause" />

            <ImageView
                android:id="@+id/image_next"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="@dimen/weight_1"
                android:contentDescription="@string/description"
                android:src="@drawable/ic_skip_next" />

            <ImageView
                android:id="@+id/image_repeat"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="@dimen/weight_1"
                android:contentDescription="@string/description"
                android:src="@drawable/ic_repeat" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
