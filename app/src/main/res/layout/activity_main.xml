<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_little_gray"
    tools:context="com.fstyle.androidtrainning.screen.main.MainActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_transparent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/pcm_music"
            app:titleTextColor="@color/color_white"
            tools:targetApi="lollipop"
            />
        <com.fstyle.androidtrainning.widget.UnSwipeViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolBar"
            android:layout_marginBottom="@dimen/dp_75"
            />

        <com.roughike.bottombar.BottomBar
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:layout_alignParentBottom="true"
            android:paddingTop="@dimen/dp_10"
            android:textAlignment="center"
            app:bb_badgeBackgroundColor="@color/color_transparent"
            app:bb_tabXmlResource="@xml/bottombar_tabs"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            >
            <ImageView
                android:id="@+id/image_back"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/ic_back"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="@dimen/weight_1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/text_name_song"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/name_of_song"
                    android:textColor="@color/color_deep_purple"
                    android:textSize="@dimen/sp_24"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/text_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/name_of_song"
                    android:textColor="@color/color_little_purple"
                    android:textSize="@dimen/sp_15"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/image_alarm"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/ic_alarm"
                />
        </LinearLayout>

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/idicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            />
        <android.support.v4.view.ViewPager
            android:id="@+id/pager_playing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_400"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/text_start"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/default_time"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_24"
                />
            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="@dimen/weight_1"
                />
            <TextView
                android:id="@+id/text_total"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/default_time"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_24"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_10"
            >
            <ImageView
                android:id="@+id/image_shuffle"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="@dimen/weight_1"
                android:src="@drawable/ic_shuffle"
                />
            <ImageView
                android:id="@+id/image_previous"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="@dimen/weight_1"
                android:src="@drawable/ic_skip_previous"
                />
            <ImageView
                android:id="@+id/image_pause"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="@dimen/weight_1"
                android:src="@drawable/ic_pause"
                />
            <ImageView
                android:id="@+id/image_next"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="@dimen/weight_1"
                android:src="@drawable/ic_skip_next"
                />
            <ImageView
                android:id="@+id/image_repeat"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_weight="@dimen/weight_1"
                android:src="@drawable/ic_repeat"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
