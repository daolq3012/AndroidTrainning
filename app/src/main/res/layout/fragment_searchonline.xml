<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/toolBar"
    android:padding="@dimen/dp_10"
    tools:context="com.fstyle.androidtrainning.screen.searchonline.SearchOnlineFragment"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/text_no_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/no_data"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_50"
            android:textStyle="bold"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/text_label_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_song"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            android:visibility="gone"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_label_song"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/text_label_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_song"
            android:text="@string/label_album"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_label_album"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            />
        <TextView
            android:visibility="gone"
            android:id="@+id/text_label_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recycler_album"
            android:text="@string/label_artist"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_label_artist"
            android:layout_marginTop="@dimen/dp_10"
            />
    </RelativeLayout>
</ScrollView>
