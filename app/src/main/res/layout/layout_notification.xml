<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayoutNotification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_little_silver"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/subControl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/color_little_silver"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="@dimen/weight_1"
            android:contentDescription="@string/photo"
            />

        <LinearLayout
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/weight_1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text_name_song"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_15"
                />
            <TextView
                android:id="@+id/text_name_artist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:gravity="center_vertical"
                android:textColor="@color/color_black"
                android:textSize="@dimen/sp_10"
                />


        </LinearLayout>

        <ImageView
            android:id="@+id/image_previous"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="@dimen/weight_1"
            android:contentDescription="@string/photo"
            android:src="@drawable/ic_skip_previous"
            />

        <ImageView
            android:id="@+id/image_pause"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="@dimen/weight_1"
            android:contentDescription="@string/photo"
            android:src="@drawable/ic_pause"
            />

        <ImageView
            android:id="@+id/image_next"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_70"
            android:layout_weight="@dimen/weight_1"
            android:contentDescription="@string/photo"
            android:src="@drawable/ic_skip_next"
            />
        <ImageView
            android:id="@+id/image_close"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:contentDescription="@string/photo"
            android:src="@drawable/ic_cancel"
            />
    </LinearLayout>
</LinearLayout>