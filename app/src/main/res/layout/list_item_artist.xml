<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_dark_opacity"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_20"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:paddingStart="@dimen/dp_20"
    android:paddingTop="@dimen/dp_10">

    <ImageView
        android:id="@+id/image_artist"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/ic_unknown_song"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/text_name_artist"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_30"
            android:text="@string/artist_name_demo"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_count_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/songs_count"
            android:textColor="@color/color_white" />

    </LinearLayout>
</LinearLayout>
